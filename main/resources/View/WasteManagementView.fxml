<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #f5f9fc;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse74.mytest2.responsive.Controller.WasteManagementController">
   <children>
      <Label layoutX="20.0" layoutY="20.0" style="-fx-text-fill: #2c3e50;" text="Waste Management">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <VBox layoutX="50.0" layoutY="60.0" prefHeight="319.0" prefWidth="800.0" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="waste_ID" />
            <TextField fx:id="txtWaste_id" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="milling_ID" />
            <ComboBox fx:id="cmbMilling_id" prefWidth="200.0" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="waste type" />
            <ComboBox fx:id="cmbWaste_type" prefWidth="200.0" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="quantity" />
            <TextField fx:id="txtQuantity" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="disposal method" />
            <ComboBox fx:id="cmbDisposal_method" prefWidth="200.0" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="recorded date" />
            <TextField fx:id="txtrecorded_date" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <ButtonBar layoutX="50.0" layoutY="440.0" prefHeight="40.0" prefWidth="800.0" style="-fx-background-color: transparent; -fx-padding: 10 0 10 0;">
         <buttons>
            <Button fx:id="btnSave" minWidth="80.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="30.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 3;" text="Save">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnUpdate" minWidth="80.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="30.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 3;" text="Update">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnDelete" minWidth="80.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="30.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 3;" text="Delete">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnClear" minWidth="80.0" mnemonicParsing="false" onAction="#btnClearOnAction" prefHeight="30.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 3;" text="Clear">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
         </buttons>
      </ButtonBar>
      <TableView fx:id="table" layoutX="50.0" layoutY="486.0" onMouseClicked="#tableColumnOnClicked" prefHeight="210.0" prefWidth="800.0" style="-fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
         <columns>
            <TableColumn fx:id="colWaste_id" prefWidth="120.0" style="-fx-font-size: 12;" text="waste_id" />
            <TableColumn fx:id="colMilling_id" prefWidth="120.0" style="-fx-font-size: 12;" text="milling_id" />
            <TableColumn fx:id="colWaste_type" prefWidth="162.0" style="-fx-font-size: 12;" text="waste_type" />
            <TableColumn fx:id="colQuantity" prefWidth="98.0" style="-fx-font-size: 12;" text="quantity" />
            <TableColumn fx:id="colDisposalMethod" prefWidth="180.0" style="-fx-font-size: 12;" text="disposal_method" />
            <TableColumn fx:id="colRecordedDate" prefWidth="120.0" style="-fx-font-size: 12;" text="recorded_date" />
         </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane>