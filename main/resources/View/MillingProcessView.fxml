<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="850.0" prefWidth="900.0" style="-fx-background-color: #f5f9fc;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse74.mytest2.responsive.Controller.MillingProcessController">
   <children>
      <Label layoutX="20.0" layoutY="20.0" style="-fx-text-fill: #2c3e50;" text="Milling Management">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>

      <VBox layoutX="50.0" layoutY="60.0" prefHeight="350.0" prefWidth="800.0" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="Milling ID" />
            <TextField fx:id="txtMilling_id" editable="false" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />

            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="Paddy ID" />
            <ComboBox fx:id="cmbPaddyId" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />

            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="Start Time" />
            <Label fx:id="lblStartTime" style="-fx-font-size: 14; -fx-font-weight: bold;" />

            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="End Time" />
            <HBox spacing="5.0">
               <Spinner fx:id="endHourSpinner" prefWidth="70.0" style="-fx-font-size: 14;" />
               <Label style="-fx-font-size: 14; -fx-padding: 5 0 0 0;" text=":" />
               <Spinner fx:id="endMinuteSpinner" prefWidth="70.0" style="-fx-font-size: 14;" />
               <Label style="-fx-font-size: 14; -fx-padding: 5 0 0 0;" text=":" />
               <Spinner fx:id="endSecondSpinner" prefWidth="70.0" style="-fx-font-size: 14;" />
            </HBox>

            <Label fx:id="lblDuration" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 5 0 0 0;" text="Duration: 00:00:00" />

            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="Milled Quantity (kg)" />
            <TextField fx:id="txtMilledQuantity" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />

            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="Broken Rice (kg)" />
            <TextField fx:id="txtBrokenRice" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />

            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="Husk (kg)" />
            <TextField fx:id="txtHusk" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />

            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="Bran (kg)" />
            <TextField fx:id="txtBran" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>

      <ButtonBar layoutX="53.0" layoutY="583.0" prefHeight="40.0" prefWidth="800.0" style="-fx-background-color: transparent; -fx-padding: 10 0 10 0;">
         <buttons>
            <Button fx:id="btnSave" minWidth="80.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="30.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 3;" text="Save">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnUpdate" minWidth="80.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="30.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 3;" text="Update">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnDelete" minWidth="80.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="30.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 3;" text="Delete">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnClear" minWidth="80.0" mnemonicParsing="false" onAction="#btnClearOnAction" prefHeight="30.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 3;" text="Clear">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnOverride" minWidth="80.0" mnemonicParsing="false" onAction="#toggleOverride" prefHeight="30.0" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-background-radius: 3;" text="Override">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
         </buttons>
      </ButtonBar>

      <TableView fx:id="table" layoutX="53.0" layoutY="628.0" onMouseClicked="#tableColumnOnClicked" prefHeight="160.0" prefWidth="800.0" style="-fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
         <columns>
            <TableColumn fx:id="colMilling_id" prefWidth="100.0" style="-fx-font-size: 12;" text="Milling ID" />
            <TableColumn fx:id="colPaddy_id" prefWidth="100.0" style="-fx-font-size: 12;" text="Paddy ID" />
            <TableColumn fx:id="colStart_time" prefWidth="100.0" style="-fx-font-size: 12;" text="Start Time" />
            <TableColumn fx:id="colEnd_time" prefWidth="100.0" style="-fx-font-size: 12;" text="End Time" />
            <TableColumn fx:id="colmilled_Quantity" prefWidth="120.0" style="-fx-font-size: 12;" text="Milled (kg)" />
            <TableColumn fx:id="colBroken_rice" prefWidth="100.0" style="-fx-font-size: 12;" text="Broken (kg)" />
            <TableColumn fx:id="colHusk" prefWidth="90.0" style="-fx-font-size: 12;" text="Husk (kg)" />
            <TableColumn fx:id="colBran_rice" prefWidth="90.0" style="-fx-font-size: 12;" text="Bran (kg)" />
         </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane>