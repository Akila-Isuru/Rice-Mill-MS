<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.gdse74.mytest2.responsive.Controller.ForgotPasswordController">
    <children>
        <VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Forgot Password" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Label text="Enter your email address to reset your password" />
                <TextField fx:id="txtEmail" promptText="Enter your email" prefWidth="250.0" />
                <Button fx:id="btnResetPassword" mnemonicParsing="false" onAction="#resetPasswordOnAction" prefWidth="150.0" text="Reset Password" />
                <Button fx:id="btnBackToLogin" mnemonicParsing="false" onAction="#backToLoginOnAction" prefWidth="150.0" text="Back to Login" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>