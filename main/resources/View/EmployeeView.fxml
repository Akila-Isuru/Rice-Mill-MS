<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #f5f9fc;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse74.mytest2.responsive.Controller.EmployeeController">
    <children>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" spacing="20.0">
            <children>
                <Label style="-fx-text-fill: #2c3e50;" text="Employee Management">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <Label fx:id="lblEmployeeCount" style="-fx-text-fill: #2980b9; -fx-font-weight: bold;" text="Employees: 0" />
            </children>
        </HBox>

        <VBox layoutX="50.0" layoutY="60.0" prefHeight="250.0" prefWidth="800.0" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="Employee ID" />
                <TextField fx:id="txtEmployeeId" promptText="E00#" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />

                <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="Name" />
                <TextField fx:id="txtName" onKeyReleased="#txtNameChange" promptText="Employee Name" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />

                <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="Address" />
                <TextField fx:id="txtAddress" promptText="Employee Address" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />

                <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="Contact Number" />
                <TextField fx:id="txtContactNumber" onKeyReleased="#txtContactChange" promptText="0777777777" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />

                <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="Job Role" />
                <TextField fx:id="txtJobRole" promptText="e.g., Manager, Worker" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />

                <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #34495e; -fx-font-size: 12;" text="Basic Salary" />
                <TextField fx:id="txtBasicSalary" onKeyReleased="#txtBasicSalaryChange" promptText="e.g., 50000.00" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />

            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>

        <HBox layoutX="763.0" layoutY="26.0" prefHeight="32.0" prefWidth="52.0" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#clearSearch" style="-fx-background-color: #bdc3c7; -fx-background-radius: 3;" text="Clear" />
            </children>
        </HBox>

        <ButtonBar layoutX="50.0" layoutY="429.0" prefHeight="40.0" prefWidth="800.0" style="-fx-background-color: transparent; -fx-padding: 10 0 10 0;">
            <buttons>
                <Button fx:id="btnSave" minWidth="80.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="30.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 3;" text="Save">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>
                <Button fx:id="btnUpdate" minWidth="80.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="30.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 3;" text="Update">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>
                <Button fx:id="btnDelete" minWidth="80.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="30.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 3;" text="Delete">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>
                <Button fx:id="btnClear" minWidth="80.0" mnemonicParsing="false" onAction="#btnClearOnAction" prefHeight="30.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 3;" text="Clear">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>
            </buttons>
        </ButtonBar>

        <TableView fx:id="tblEmployees" layoutX="50.0" layoutY="484.0" onMouseClicked="#tableColumnOnClicked" prefHeight="218.0" prefWidth="800.0" style="-fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <columns>
                <TableColumn fx:id="colEmployeeId" prefWidth="100.0" style="-fx-font-size: 12;" text="Emp ID" />
                <TableColumn fx:id="colName" prefWidth="150.0" style="-fx-font-size: 12;" text="Name" />
                <TableColumn fx:id="colAddress" prefWidth="150.0" style="-fx-font-size: 12;" text="Address" />
                <TableColumn fx:id="colContactNumber" prefWidth="120.0" style="-fx-font-size: 12;" text="Contact No" />
                <TableColumn fx:id="colJobRole" prefWidth="130.0" style="-fx-font-size: 12;" text="Job Role" />
                <TableColumn fx:id="colBasicSalary" prefWidth="100.0" style="-fx-font-size: 12;" text="Basic Salary" />
            </columns>
        </TableView>
        <TextField fx:id="txtSearch" layoutX="384.0" layoutY="26.0" onKeyReleased="#searchEmployee" prefHeight="27.0" prefWidth="372.0" promptText="Search employees..." style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</AnchorPane>
