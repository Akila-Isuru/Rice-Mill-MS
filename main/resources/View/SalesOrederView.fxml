<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse74.mytest2.responsive.Controller.SalesOrderController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <children>
      <!-- Header Section -->
      <Label layoutX="20.0" layoutY="20.0" style="-fx-text-fill: #2c3e50;" text="Order Management">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>

      <!-- Order Information Section -->
      <VBox layoutX="50.0" layoutY="70.0" spacing="15" style="-fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-padding: 15;">
         <HBox spacing="20" alignment="CENTER_LEFT">
            <Label prefHeight="42.0" prefWidth="76.0" text="Order Id" style="-fx-text-fill: #495057;">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txtOrdera" prefHeight="35.0" prefWidth="165.0" style="-fx-background-radius: 3; -fx-border-color: #ced4da; -fx-border-radius: 3;"/>

            <Label prefHeight="28.0" prefWidth="55.0" text="Date" style="-fx-text-fill: #495057;">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblOrder_Date" prefHeight="35.0" prefWidth="202.0" style="-fx-border-color: #ced4da; -fx-border-radius: 3; -fx-padding: 5; -fx-background-color: white;"/>
         </HBox>

         <HBox spacing="20" alignment="CENTER_LEFT">
            <Label prefHeight="39.0" prefWidth="105.0" text="Customer ID" style="-fx-text-fill: #495057;">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="cmbCustomerId" onAction="#cmbCustomerOnAction" prefHeight="35.0" prefWidth="157.0" style="-fx-background-radius: 3; -fx-border-color: #ced4da;"/>

            <Label prefHeight="42.0" prefWidth="138.0" text="Customer Name" style="-fx-text-fill: #495057;">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblCustomerName" prefHeight="35.0" prefWidth="157.0" style="-fx-border-color: #ced4da; -fx-border-radius: 3; -fx-padding: 5; -fx-background-color: white;"/>
         </HBox>
      </VBox>

      <!-- Product Information Section -->
      <VBox layoutX="50.0" layoutY="210.0" spacing="15" style="-fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-padding: 15;">
         <HBox spacing="20" alignment="CENTER_LEFT">
            <Label prefHeight="39.0" prefWidth="105.0" text="Product Id" style="-fx-text-fill: #495057;">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="cmbItemId" onAction="#cmbItemIdOnAction" prefHeight="35.0" prefWidth="157.0" style="-fx-background-radius: 3; -fx-border-color: #ced4da;"/>

            <Label prefHeight="42.0" prefWidth="138.0" text="Product Type" style="-fx-text-fill: #495057;">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblItemName" prefHeight="35.0" prefWidth="165.0" style="-fx-border-color: #ced4da; -fx-border-radius: 3; -fx-padding: 5; -fx-background-color: white;"/>
         </HBox>

         <HBox spacing="20" alignment="CENTER_LEFT">
            <Label prefHeight="42.0" prefWidth="106.0" text="Unit Price" style="-fx-text-fill: #495057;">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblUnitPrice" prefHeight="35.0" prefWidth="165.0" style="-fx-border-color: #ced4da; -fx-border-radius: 3; -fx-padding: 5; -fx-background-color: white;"/>

            <Label prefHeight="42.0" prefWidth="106.0" text="Available Qty" style="-fx-text-fill: #495057;">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblItemQty" prefHeight="35.0" prefWidth="165.0" style="-fx-border-color: #ced4da; -fx-border-radius: 3; -fx-padding: 5; -fx-background-color: white;"/>
         </HBox>
      </VBox>

      <!-- Add to Cart Section -->
      <VBox layoutX="50.0" layoutY="350.0" spacing="10" style="-fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-padding: 15;">
         <HBox spacing="20" alignment="CENTER_LEFT">
            <Label prefHeight="42.0" prefWidth="106.0" text="Quantity" style="-fx-text-fill: #495057;">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txtAddCartQuantity" prefHeight="35.0" prefWidth="120.0" promptText="Enter quantity" style="-fx-background-radius: 3; -fx-border-color: #ced4da;"/>

            <Button fx:id="btnAddToCart" mnemonicParsing="false" onAction="#btnAddToCartOnAction"
                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 3; -fx-font-weight: bold;"
                    text="Add to Cart">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </HBox>
      </VBox>

      <!-- Order Items Table -->
      <TableView fx:id="table" layoutX="50.0" layoutY="420.0" onMouseClicked="#tableColumnOnClicked"
                 prefHeight="200.0" prefWidth="800.0"
                 style="-fx-background-radius: 5; -fx-border-color: #dee2e6; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);">
         <columns>
            <TableColumn fx:id="colProductID" prefWidth="120" style="-fx-font-size: 13; -fx-text-fill: #495057;" text="Product ID" />
            <TableColumn fx:id="colProductName" prefWidth="150" style="-fx-font-size: 13; -fx-text-fill: #495057;" text="Product Name" />
            <TableColumn fx:id="colUnitPrice" prefWidth="120" style="-fx-font-size: 13; -fx-text-fill: #495057;" text="Unit Price" />
            <TableColumn fx:id="colQty" prefWidth="80" style="-fx-font-size: 13; -fx-text-fill: #495057;" text="Qty" />
            <TableColumn fx:id="colTotalAmount" prefWidth="120" style="-fx-font-size: 13; -fx-text-fill: #495057;" text="Total Amount" />
            <TableColumn fx:id="colAction" prefWidth="120" style="-fx-font-size: 13; -fx-text-fill: #495057;" text="Action" />
         </columns>
      </TableView>

      <!-- Footer Button -->
      <Button layoutX="770.0" layoutY="650.0" mnemonicParsing="false"
              onAction="#btnOnActionPlaceOrder"
              style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 3; -fx-font-weight: bold;"
              text="Place Order">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>