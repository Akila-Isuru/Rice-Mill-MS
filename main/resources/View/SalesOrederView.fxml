<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #f5f9fc;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse74.mytest2.responsive.Controller.SalesOrderController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <children>
      <!-- Header Section -->
      <Label layoutX="20.0" layoutY="20.0" style="-fx-text-fill: #2c3e50;" text="Order Management">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>

      <!-- Order Information Section -->
      <VBox layoutX="50.0" layoutY="70.0" spacing="15">
         <HBox spacing="20" alignment="CENTER_LEFT">
            <Label prefHeight="42.0" prefWidth="76.0" text="Order Id">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txtOrdera" prefHeight="31.0" prefWidth="165.0" style="-fx-background-radius: 3;"/>

            <Label prefHeight="28.0" prefWidth="55.0" text="Date">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblOrder_Date" prefHeight="31.0" prefWidth="202.0" style="-fx-border-color: #d1d1d1; -fx-border-radius: 3; -fx-padding: 5;"/>
         </HBox>

         <HBox spacing="20" alignment="CENTER_LEFT">
            <Label prefHeight="39.0" prefWidth="105.0" text="Customer ID">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="cmbCustomerId" onAction="#cmbCustomerOnAction" prefHeight="26.0" prefWidth="157.0" style="-fx-background-radius: 3;"/>

            <Label prefHeight="42.0" prefWidth="138.0" text="Customer Name">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblCustomerName" prefHeight="31.0" prefWidth="157.0" style="-fx-border-color: #d1d1d1; -fx-border-radius: 3; -fx-padding: 5;"/>
         </HBox>
      </VBox>

      <!-- Product Information Section -->
      <VBox layoutX="50.0" layoutY="180.0" spacing="15">
         <HBox spacing="20" alignment="CENTER_LEFT">
            <Label prefHeight="39.0" prefWidth="105.0" text="Product Id">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="cmbItemId" onAction="#cmbItemIdOnAction" prefHeight="26.0" prefWidth="157.0" style="-fx-background-radius: 3;"/>

            <Label prefHeight="42.0" prefWidth="138.0" text="Product Type">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblItemName" prefHeight="39.0" prefWidth="165.0" style="-fx-border-color: #d1d1d1; -fx-border-radius: 3; -fx-padding: 5;"/>
         </HBox>

         <HBox spacing="20" alignment="CENTER_LEFT">
            <Label prefHeight="42.0" prefWidth="106.0" text="Unit Price">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblUnitPrice" prefHeight="39.0" prefWidth="165.0" style="-fx-border-color: #d1d1d1; -fx-border-radius: 3; -fx-padding: 5;"/>

            <Label prefHeight="42.0" prefWidth="106.0" text="Available Qty">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblItemQty" prefHeight="39.0" prefWidth="165.0" style="-fx-border-color: #d1d1d1; -fx-border-radius: 3; -fx-padding: 5;"/>
         </HBox>
      </VBox>

      <!-- Add to Cart Section -->
      <VBox layoutX="50.0" layoutY="320.0" spacing="10">
         <HBox spacing="20" alignment="CENTER_LEFT">
            <Label prefHeight="42.0" prefWidth="106.0" text="Quantity">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txtAddCartQuantity" prefWidth="120.0" promptText="Enter quantity" style="-fx-background-radius: 3;"/>

            <Button fx:id="btnAddToCart" mnemonicParsing="false" onAction="#btnAddToCartOnAction"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 3;"
                    text="Add to Cart">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
         </HBox>
      </VBox>

      <!-- Order Items Table -->
      <TableView fx:id="table" layoutX="50.0" layoutY="380.0" onMouseClicked="#tableColumnOnClicked"
                 prefHeight="250.0" prefWidth="800.0"
                 style="-fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
         <columns>
            <TableColumn fx:id="colProductID" prefWidth="120" style="-fx-font-size: 12;" text="Product ID" />
            <TableColumn fx:id="colProductName" prefWidth="150" style="-fx-font-size: 12;" text="Product Name" />
            <TableColumn fx:id="colUnitPrice" prefWidth="120" style="-fx-font-size: 12;" text="Unit Price" />
            <TableColumn fx:id="colQty" prefWidth="80" style="-fx-font-size: 12;" text="Qty" />
            <TableColumn fx:id="colTotalAmount" prefWidth="120" style="-fx-font-size: 12;" text="Total Amount" />
            <TableColumn fx:id="colAction" prefWidth="120" style="-fx-font-size: 12;" text="Action" />
         </columns>
      </TableView>

      <!-- Footer Button -->
      <Button layoutX="770.0" layoutY="650.0" mnemonicParsing="false"
              onAction="#btnOnActionPlaceOrder"
              style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 3;"
              text="Place Order">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>